<% if @all_contacts %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Phone #</th>
      </tr>
    </thead>
    <% @all_contacts.each do |contact| %>
      <tbody>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phone_mobile_international %></td>
          <td><button id="contact_data" type="button" class="btn btn-info btn-lg" data-contact-id="<%=contact.id%>"
                                                                                  data-phone-mobile-international="<%=contact.phone_mobile_international%>"
                                                                                  data-toggle="modal" data-target="#myModal">SMS</button></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  No contacts found, try reloading
<% end %>
